# .env.example

# Application Settings
NODE_ENV=development # development, production, test
LOG_LEVEL=info # error, warn, info, verbose, debug, silly

# qBittorrent Settings
QB_URL=http://localhost:8080
QB_USERNAME=
QB_PASSWORD=

# Rclone Settings
RCLONE_CONFIG_PATH= # Path to your rclone.conf file, e.g., /home/user/.config/rclone/rclone.conf or C:/Users/User/AppData/Roaming/rclone/rclone.conf
RCLONE_REMOTE_NAME= # Your rclone remote name, e.g., mydrive
RCLONE_DEFAULT_UPLOAD_PATH= # Default base path on the remote, e.g., qb_uploads/

# Nodemailer Settings (for email notifications)
MAILER_HOST=
MAILER_PORT=587 # Or 465 for SSL
MAILER_SECURE=false # true for port 465, false for 587 (STARTTLS)
MAILER_USER=
MAILER_PASS=
MAILER_FROM="QB Cloud Sync <no-reply@example.com>"
MAILER_TO= # Comma-separated list of recipient email addresses

# Behavior Settings
DELETE_LOCAL_FILES=true # true or false
CLEANUP_EMPTY_DIRS=true # true or false
DELETE_QB_TASK=true # true or false

# Task Processor Settings
POLL_INTERVAL_MS=300000 # e.g., 5 minutes (300000 ms)
MAX_CONCURRENT_UPLOADS=2

# Smart Archiving Rules (JSON string or path to a JSON file)
# Example JSON string:
# ARCHIVING_RULES_JSON='[{"if":{"category":"movies"},"then":{"remotePath":"/Movies/{year}/{torrentName}"}},{"if":"default","then":{"remotePath":"/Others/{category}/{torrentName}"}}]'
# Example path to JSON file:
ARCHIVING_RULES_PATH=./archiving-rules.json # Optional, if you prefer a separate file

# Database Settings (Prisma will primarily use DATABASE_URL)
DATABASE_URL="file:./dev.db"